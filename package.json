{
    "name": "node-typescript-boilerplate",
    "version": "0.1.0",
    "description": "",
    "main": "dist/index.cjs.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "bin": {
        "node-typescript-boilerplate": "./dist/bin.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "nodemon -e ts -w ./src -x npm run ts-node:start",
        "ts-node:start": "node ./node_modules/.bin/ts-node --project tsconfig.json src/index.ts",
        "clean": "rimraf coverage build tmp",
        "build": "npm run clean && rollup -c",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "prettier:fix": "prettier \"src/**/*\" --write",
        "prettier:check": "prettier \"src/**/*\" --check",
        "test": "jest --coverage --passWithNoTests",
        "test:watch": "jest --watch",
        "type-check:watch": "npm run type-check -- --watch",
        "type-check": "tsc --noEmit",
        "all-ci": "npm run test && npm run lint && npm run prettier:check && npm run type-check && npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run all-ci"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/erhathaway/node-typescript-boilerplate.git"
    },
    "author": "Ethan Hathaway",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/erhathaway/node-typescript-boilerplate/issues"
    },
    "homepage": "https://github.com/erhathaway/node-typescript-boilerplate#readme",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^26.0.16",
        "@types/node": "^13.7.1",
        "@typescript-eslint/eslint-plugin": "^2.13.0",
        "@typescript-eslint/parser": "^2.13.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-jest": "^23.2.0",
        "eslint-plugin-react": "^7.17.0",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.6.1",
        "rollup-plugin-eslint": "^7.0.0",
        "rollup-plugin-executable": "^1.5.3",
        "rollup-plugin-hashbang": "^2.2.2",
        "rollup-plugin-multi-input": "^1.1.1",
        "rollup-plugin-typescript2": "^0.27.0",
        "ts-jest": "^25.2.1",
        "ts-morph": "^1.3.5",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.7.0"
    }
}
