{
    "name": "node-typescript-boilerplate",
    "version": "0.1.0",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "nodemon -e ts -w ./src -x npm run ts-node-start",
        "ts-node-start": "node ./node_modules/.bin/ts-node --project tsconfig.json src/index.ts",
        "clean": "rimraf coverage build tmp",
        "build": "tsc -p tsconfig.json",
        "build:watch": "tsc -w -p tsconfig.json",
        "format": "./node_modules/.bin/prettier \"src/**/*\" --write",
        "lint": "tslint -t stylish --project \"tsconfig.json\"",
        "test": "jest --coverage --passWithNoTests",
        "test:watch": "jest --watch",
        "type-check:watch": "npm run type-check -- --watch",
        "type-check": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/erhathaway/node-typescript-boilerplate.git"
    },
    "author": "Ethan Hathaway",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/erhathaway/node-typescript-boilerplate/issues"
    },
    "homepage": "https://github.com/erhathaway/node-typescript-boilerplate#readme",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^24.0.11",
        "jest": "^24.5.0",
        "nodemon": "^1.18.10",
        "prettier": "^1.16.4",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.0",
        "ts-morph": "^1.3.1",
        "ts-node": "^8.0.3",
        "tsconfig-paths": "^3.8.0",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-immutable": "^5.5.2",
        "typescript": "^3.4.1"
    }
}
